<body>
    <h1>Edit notes</h1>
    <form action="/notes/<%=note._id%>?_method=PUT" method="POST">
        <h2><%=note.user.name%>'s notes on the <%=note.muscle%></h2>
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value= "<%=note.title%>" >
        </div>
        <div>
            <label for="mytextarea">Text:</label>
            <textarea id="mytextarea" name = "text"><%=note.text%></textarea>
        </div>
    <div id="button-edit">
        <input type="submit" value="Save Notes" class="btn btn-secondary">
    </form>
    <form action="/bodies/<%=note.user._id%>/<%=note.bodyPart%>">
        <input type="submit" value="Go Back to Body" class="btn btn-info">
    </form>
